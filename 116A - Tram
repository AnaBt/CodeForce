#include <iostream>
#include <string>
using namespace std;
 
 
int main()
{
    int n,a,b; 
    int tot = 0;
    int maior = -1;
    cin >> n;
    
    
    for (int i = 0 ; i < n ; i++){
        cin >> a >> b;
        tot -= a;
        tot += b;
        if (tot >= maior){
            maior = tot;
        }
        
    }
    cout << maior;
}
