#include <iostream>
#include <string>
using namespace std;
 
int main()
{
    int k,n,w;
    int tot = 0;
    
    //cout << "Preco da 1 banana , quanto ele tem , quanto ele quer " << endl;
    cin >> k >> n >> w;
    
    for (int i = 1 ; i < w+1 ; i++){
        tot += i*k;
        
    }
    
    if (tot > n ){
        cout << tot-n;
    }
    else {
        cout << 0;
    }
    return 0;
}
